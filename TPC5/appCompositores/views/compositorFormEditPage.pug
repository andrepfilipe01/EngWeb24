extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Compositor Form

        form.w3-container(method="POST") 
            fieldset 
                legend Metadata 
                label Id 
                input.w3-input.w3-round(type="text" name="id" value=compositor.id readonly)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" required value=compositor.nome)
                label Biografia
                input.w3-input.w3-round(type="text" name="bio" required value=compositor.bio)
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" required value=compositor.dataNasc)
                label Data Obito
                input.w3-input.w3-round(type="text" name="dataObito" required value=compositor.dataObito)
                label Periodo
                input.w3-input.w3-round(type="text" name="periodo" required value=compositor.periodo)
            br 
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar 

        footer.w3-container.w3-purple 
                h5 
                    span Generated by Andre Filipe in #{date} - [
                    a(href="/compositores") Voltar
                    span ]