extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Compositor Form

        form.w3-container(method="POST") 
            fieldset 
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" required) 
                label Nome
                input.w3-input.w3-round(type="text" name="nome" required) 
                label Biografia
                input.w3-input.w3-round(type="text" name="bio" required) 
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" required) 
                label Data Obito
                input.w3-input.w3-round(type="text" name="dataObito" required) 
                label Periodo
                input.w3-input.w3-round(type="text" name="periodo" required) 

            br 
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar

        footer.w3-container.w3-purple 
            h5 
                span Generated by Andre Filipe in #{date} - [
                a(href="/compositores") Voltar
                span ]